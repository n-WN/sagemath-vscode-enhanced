{
  "name": "sagemath-enhanced",
  "publisher": "Lov3",
  "displayName": "SageMath Enhanced",
  "description": "An enhanced VS Code extension for SageMath, providing advanced features and integrations.",
  "version": "2.0.3",
  "engines": {
    "vscode": "^1.76.0"
  },
  "icon": "images/gptGenIcon.png",
  "activationEvents": [],
  "categories": [
    "Programming Languages",
    "Extension Packs"
  ],
  "keywords": [
    "sagemath",
    "mathematics",
    "coding",
    "extension",
    "sage",
    "crypto",
    "ctf"
  ],
  "main": "out/src/extension.js",
  "contributes": {
    "languages": [
      {
        "id": "sage",
        "aliases": [
          "SageMath",
          "Sage"
        ],
        "extensions": [
          ".sage"
        ],
        "configuration": "./language-configuration.json"
      }
    ],
    "configuration": {
      "title": "SageMath Enhanced",
      "properties": {
        "sagemathEnhanced.autoDeleteGeneratedFile": {
          "type": "boolean",
          "default": false,
          "description": "Automatically delete the generated .sage.py file after running a SageMath script."
        },
        "sagemathEnhanced.useWSL": {
          "type": "boolean",
          "default": false,
          "description": "Use WSL (Windows Subsystem for Linux) to run SageMath scripts."
        },
        "sagemathEnhanced.interpreterPath": {
          "type": "string",
          "default": "sage",
          "description": "Path to the SageMath interpreter"
        },
        "sagemathEnhanced.enableDiagnostics": {
          "type": "boolean",
          "default": true,
          "description": "Enable diagnostic messages and error checking"
        },
        "sagemathEnhanced.enableCompletion": {
          "type": "boolean",
          "default": true,
          "description": "Enable code completion and IntelliSense features"
        },
        "sagemathEnhanced.maxNumberOfProblems": {
          "type": "number",
          "default": 100,
          "description": "Maximum number of problems shown in the diagnostics"
        },
        "sagemathEnhanced.enableHover": {
          "type": "boolean",
          "default": true,
          "description": "Enable hover documentation and information"
        },
        "sagemathEnhanced.logLevel": {
          "type": "string",
          "enum": ["off", "error", "warn", "info", "debug"],
          "default": "info",
          "description": "Language server log level"
        }
      }
    },
    "grammars": [
      {
        "language": "sage",
        "scopeName": "source.sage",
        "path": "./syntaxes/sage.tmLanguage.json"
      }
    ],
    "commands": [
      {
        "command": "runsagemathfile.run",
        "title": "Run SageMath File",
        "icon": "$(play)"
      },
      {
        "command": "sagemathEnhanced.restartServer",
        "title": "Restart SageMath Language Server",
        "category": "SageMath"
      }
    ],
    "menus": {
      "editor/title": [
        {
          "when": "resourceLangId == sage",
          "command": "runsagemathfile.run",
          "group": "navigation"
        }
      ],
      "commandPalette": [
        {
          "command": "sagemathEnhanced.restartServer",
          "when": "resourceLangId == sage"
        }
      ]
    },
    "snippets": [
      {
        "language": "sage",
        "path": "./snippets/sage.json"
      }
    ]
  },
  "scripts": {
    "vscode:prepublish": "npm run compile",
    "compile": "tsc -p ./",
    "watch": "tsc -watch -p ./",
    "pretest": "npm run compile && npm run lint",
    "lint": "eslint src --ext ts",
    "test": "vscode-test",
    "clean": "rimraf out"
  },
  "devDependencies": {
    "@types/mocha": "^10.0.6",
    "@types/node": "18.x",
    "@types/vscode": "^1.76.0",
    "@typescript-eslint/eslint-plugin": "^6.19.1",
    "@typescript-eslint/parser": "^6.19.1",
    "@vscode/test-cli": "^0.0.4",
    "@vscode/test-electron": "^2.3.9",
    "eslint": "^8.56.0",
    "typescript": "^5.4.5"
  },
  "license": "AGPL-3.0",
  "repository": {
    "type": "git",
    "url": "https://github.com/n-WN/sagemath-vscode-enhanced.git"
  },
  "dependencies": {
    "vscode-languageclient": "^9.0.1",
    "vscode-languageserver": "^9.0.1",
    "vscode-languageserver-textdocument": "^1.0.12"
  }
}
